<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/marker_yellow"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_margin="20dp"
            android:text="Находки от Праистория "
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/marker_green"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_margin="20dp"
            android:text="Находки от Тракийски период"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/marker_blue"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_margin="20dp"
            android:text="Находки от Римски и византийски период"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/marker_red"
            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_margin="20dp"
            android:text="Находки от Средновековие"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>